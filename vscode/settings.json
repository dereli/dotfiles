{
  /* WINDOW */
  "window.clickThroughInactive": false,
  "window.newWindowDimensions": "maximized",
  "window.restoreWindows": "all",
  "window.title": "${rootName}${separator}${activeEditorShort}",
  "window.zoomLevel": 0,
  /* WORKBENCH */
  "workbench.colorTheme": "Monokai",
  "workbench.editor.closeOnFileDelete": true,
  "workbench.editor.highlightModifiedTabs": true,
  "workbench.editor.showIcons": false,
  "workbench.editor.tabCloseButton": "off",
  "workbench.editor.tabSizing": "shrink",
  "workbench.enableExperiments": false,
  "workbench.list.horizontalScrolling": true,
  "workbench.settings.enableNaturalLanguageSearch": false,
  "workbench.startupEditor": "none",
  "workbench.tips.enabled": false,
  /* EDITOR */
  "editor.cursorBlinking": "phase",
  "editor.fontFamily": "'Fira Code', Menlo, Monaco, 'Courier New', monospace",
  "editor.fontLigatures": true,
  "editor.fontSize": 15,
  "editor.minimap.enabled": false,
  "editor.renderWhitespace": "boundary",
  "editor.rulers": [
    80,
    100
  ],
  "editor.suggest.localityBonus": true,
  "editor.suggestSelection": "first",
  "editor.tabSize": 2,
  /* EXTENSIONS */
  "extensions.autoCheckUpdates": false,
  "extensions.autoUpdate": false,
  "extensions.ignoreRecommendations": true,
  /* FILES */
  "files.insertFinalNewline": true,
  "files.trimFinalNewlines": true,
  "files.trimTrailingWhitespace": true,
  "files.associations": {
    ".env": "properties"
  },
  /* TERMINAL */
  "terminal.integrated.cursorBlinking": true,
  "terminal.integrated.cursorStyle": "line",
  "terminal.integrated.fontFamily": "Menlo, Monaco, 'Courier New', monospace",
  "terminal.integrated.fontSize": 14,
  /* MISC. */
  "breadcrumbs.enabled": true,
  "debug.openExplorerOnEnd": true,
  "debug.toolBarLocation": "docked",
  "diffEditor.renderSideBySide": false,
  "merge-conflict.autoNavigateNextConflict.enabled": true,
  "problems.decorations.enabled": false,
  "search.smartCase": true,
  "search.useIgnoreFiles": false,
  "telemetry.enableCrashReporter": false,
  "telemetry.enableTelemetry": false,
  "update.showReleaseNotes": false,
  /* EXTENSIONS */
  /* docker */
  "docker.containers.description": [
    "RepositoryName",
    "Status"
  ],
  "docker.containers.label": "ContainerName",
  "docker.containers.sortBy": "Label",
  "docker.volumes.label": "VolumeName",
  /* eslint */
  "eslint.alwaysShowStatus": true,
  "eslint.provideLintTask": true,
  /* gitblame */
  "gitblame.ignoreWhitespace": true,
  "gitblame.infoMessageFormat": "${commit.summary} ${author.timestamp}",
  "gitblame.logNonCritical": false,
  "gitblame.statusBarMessageFormat": "${author.name} • ${time.ago}",
  /* java */
  "java.configuration.updateBuildConfiguration": "automatic",
  "java.format.comments.enabled": true,
  "java.format.enabled": true,
  "java.format.settings.profile": "CustomStyle",
  "java.format.settings.url": "~/dotfiles/java-formatting.xml",
  "java.import.gradle.enabled": false,
  "java.maven.downloadSources": true,
  "java.saveActions.organizeImports": false,
  "java.test.defaultConfig": "default",
  "java.test.report.position": "currentView",
  "java.completion.importOrder": [
    "",
    "javax",
    "java",
    "#"
  ],
  "maven.pomfile.autoUpdateEffectivePOM": true,
  "maven.terminal.useJavaHome": true,
  "maven.terminal.favorites": [
    {
      "alias": "run",
      "command": "clean install -Ptomcat,debug -Dmaven.test.skip=true"
    }
  ],
  /* rest client */
  "rest-client.defaultHeaders": {
    "User-Agent": "curl",
    "Accept-Encoding": "gzip",
    "Content-Type": "application/json"
  },
  "rest-client.enableCustomVariableReferencesCodeLens": false,
  "rest-client.enableTelemetry": false,
  "rest-client.followredirect": false,
  "rest-client.fontSize": 14,
  "rest-client.previewColumn": "current",
  "rest-client.previewOption": "exchange",
  /* stylus */
  "stylusSupremacy.alwaysUseAtBlock": true,
  "stylusSupremacy.alwaysUseImport": true,
  "stylusSupremacy.alwaysUseNoneOverZero": true,
  "stylusSupremacy.alwaysUseZeroWithoutUnit": true,
  "stylusSupremacy.insertBraces": false,
  "stylusSupremacy.insertColons": false,
  "stylusSupremacy.insertLeadingZeroBeforeFraction": false,
  "stylusSupremacy.insertSemicolons": false,
  "stylusSupremacy.preserveNewLinesBetweenPropertyValues": true,
  "stylusSupremacy.reduceMarginAndPaddingValues": true,
  "stylusSupremacy.selectorSeparator": ",\n",
  "stylusSupremacy.sortProperties": "grouped",
  /* todo */
  "todo.file.name": "TODO",
  "todo.symbols.box": "›",
  "todo.symbols.cancelled": "✕",
  "todo.symbols.done": "+",
  /* LANGUAGE SPECIFIC */
  "[todo]": {
    "editor.wordWrapColumn": 100,
    "editor.wordWrap": "wordWrapColumn",
    "editor.wrappingIndent": "indent"
  },
}
