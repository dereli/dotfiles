{
  /* WINDOW */
  "window.clickThroughInactive": false,
  "window.newWindowDimensions": "maximized",
  "window.restoreWindows": "all",
  "window.title": "${rootName}${separator}${activeEditorShort}",
  "window.zoomLevel": 0,

  /* WORKBENCH */
  "workbench.colorTheme": "Monokai",
  "workbench.editor.closeOnFileDelete": true,
  "workbench.editor.highlightModifiedTabs": true,
  "workbench.editor.showIcons": false,
  "workbench.editor.tabActionCloseVisibility": false,
  "workbench.editor.tabSizing": "shrink",
  "workbench.enableExperiments": false,
  "workbench.layoutControl.enabled": false,
  "workbench.list.horizontalScrolling": true,
  "workbench.settings.enableNaturalLanguageSearch": false,
  "workbench.startupEditor": "none",
  "workbench.tips.enabled": false,

  /* EDITOR */
  "editor.codeActionWidget.includeNearbyQuickFixes": true,
  "editor.codeActionsOnSave": {
    "source.fixAll": "explicit"
  },
  "editor.cursorBlinking": "phase",
  "editor.foldingImportsByDefault": true,
  "editor.fontFamily": "'Fira Code', Menlo, Monaco, 'Courier New', monospace",
  "editor.fontLigatures": true,
  "editor.fontSize": 15,
  "editor.formatOnSave": true,
  "editor.minimap.enabled": false,
  "editor.renderWhitespace": "boundary",
  "editor.rulers": [80, 120],
  "editor.suggest.localityBonus": true,
  "editor.suggestSelection": "first",
  "editor.tabSize": 2,

  /* DIFF EDITOR */
  "diffEditor.renderSideBySide": false,
  "diffEditor.ignoreTrimWhitespace": false,

  /* EXTENSIONS */
  "extensions.autoCheckUpdates": false,
  "extensions.autoUpdate": false,
  "extensions.ignoreRecommendations": true,

  /* FILES */
  "files.insertFinalNewline": true,
  "files.trimFinalNewlines": true,
  "files.trimTrailingWhitespace": true,
  "files.associations": {
    ".env": "properties"
  },

  /* TERMINAL */
  "terminal.integrated.cursorBlinking": true,
  "terminal.integrated.cursorStyle": "line",
  "terminal.integrated.fontFamily": "Menlo, Monaco, 'Courier New', monospace",
  "terminal.integrated.fontSize": 14,
  "terminal.integrated.scrollback": 10000,

  /* SOURCE CONTROL */
  "scm.showOutgoingChanges": "never",
  "scm.showActionButton": false,
  "scm.diffDecorationsGutterWidth": 5,
  "scm.showInputActionButton": false,
  "scm.showIncomingChanges": "never",
  "git.enableStatusBarSync": false,
  "git.pruneOnFetch": true,

  /* MISC. */
  "breadcrumbs.enabled": true,
  "debug.openExplorerOnEnd": true,
  "debug.toolBarLocation": "commandCenter",
  "merge-conflict.autoNavigateNextConflict.enabled": true,
  "problems.decorations.enabled": false,
  "search.smartCase": true,
  "telemetry.telemetryLevel": "off",
  "typescript.updateImportsOnFileMove.enabled": "always",
  "update.showReleaseNotes": false,

  /* EXTENSIONS */

  /* docker */
  "docker.containers.description": ["RepositoryName", "Status"],
  "docker.containers.label": "ContainerName",
  "docker.containers.sortBy": "Label",
  "docker.volumes.label": "VolumeName",

  /* eslint */
  "eslint.alwaysShowStatus": true,
  "eslint.lintTask.enable": true,

  /* gitblame */
  "gitblame.ignoreWhitespace": true,
  "gitblame.infoMessageFormat": "${commit.summary} ${author.timestamp}",
  "gitblame.logNonCritical": false,
  "gitblame.statusBarMessageFormat": "${author.name} • ${time.ago}",

  /* git graph */
  "git-graph.date.format": "ISO Date & Time",
  "git-graph.dialog.addTag.type": "Lightweight",

  /* markdown */
  "markdown.preview.doubleClickToSwitchToEditor": false,
  "markdown.preview.fontSize": 16,

  /* rest client */
  "rest-client.defaultHeaders": {
    "User-Agent": "curl",
    "Accept-Encoding": "gzip",
    "Content-Type": "application/json"
  },
  "rest-client.enableCustomVariableReferencesCodeLens": false,
  "rest-client.rememberCookiesForSubsequentRequests": false,
  "rest-client.enableTelemetry": false,
  "rest-client.followredirect": false,
  "rest-client.fontSize": 14,
  "rest-client.previewColumn": "current",
  "rest-client.previewOption": "exchange",

  /* stylus */
  "stylusSupremacy.alwaysUseAtBlock": true,
  "stylusSupremacy.alwaysUseImport": true,
  "stylusSupremacy.alwaysUseNoneOverZero": true,
  "stylusSupremacy.alwaysUseZeroWithoutUnit": true,
  "stylusSupremacy.insertBraces": false,
  "stylusSupremacy.insertColons": false,
  "stylusSupremacy.insertLeadingZeroBeforeFraction": false,
  "stylusSupremacy.insertSemicolons": false,
  "stylusSupremacy.preserveNewLinesBetweenPropertyValues": true,
  "stylusSupremacy.reduceMarginAndPaddingValues": true,
  "stylusSupremacy.selectorSeparator": ",\n",
  "stylusSupremacy.sortProperties": "grouped",

  /* todo */
  "todo.file.name": "TODO",
  "todo.symbols.box": "›",
  "todo.symbols.cancelled": "✕",
  "todo.symbols.done": "+",

  /* LANGUAGE SPECIFIC */
  "[todo]": {
    "editor.wordWrapColumn": 100,
    "editor.wordWrap": "wordWrapColumn",
    "editor.wrappingIndent": "indent"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  }
}
